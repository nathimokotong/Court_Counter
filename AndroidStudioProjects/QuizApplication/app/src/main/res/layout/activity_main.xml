<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#fcf9f9"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.quizapplication.MainActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/imageView"
    android:src="@drawable/quizimggg"

    />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/imageView"
        android:text="Select one topic from below"
        android:id="@+id/txtdis"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/txtdis"
        android:layout_marginTop="10dp"
        android:id="@+id/button1"
        android:textSize="40dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="#79d7ff"
        android:textColor="@android:color/darker_gray"
        android:onClick="change"
        android:drawableLeft="@drawable/ic_rowing_black_24dp"
        android:text="SPORTS"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/button1"
        android:layout_marginTop="10dp"
        android:id="@+id/button2"
        android:onClick="changeEv"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="#79d7ff"
        android:textColor="@android:color/darker_gray"
        android:drawableLeft="@drawable/ic_chrome_reader_mode_black_24dp"
        android:text="HISTORY"
        android:textSize="40dp"
      />

    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/button2"
        android:layout_marginTop="10dp"
        android:id="@+id/button3"
        android:text="MUSIC"
        android:background="#f179d7ff"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textSize="40dp"
        android:drawableLeft="@drawable/ic_music_video_black_24dp"
        android:textColor="@android:color/darker_gray"
        android:onClick="changeMov"

         />


</RelativeLayout>
